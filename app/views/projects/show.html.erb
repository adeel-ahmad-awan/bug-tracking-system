<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <!-- <dt>  <strong><%= @project.name %></strong> </dt> -->
  <dd> <h1> <%= @project.name %></h1> </dd>

  <dt>  <strong>Description:</strong></dt>
  <dd>  <%= @project.description %></dd>

  <dt>  <strong>Number of Bugs reported:</strong></dt>
  <dd>  <%= @project.bugs_num %></dd>

  <dt>  <strong>Created by:</strong></dt>
  <dd>  <%= @project.user.full_name %></dd>

  <dt>  <strong>Email:</strong></dt>
  <dd>  <%= @project.user.email %></dd>

  <dd>
    <div class="btn-group">
      <%= link_to 'View reported bugs', project_bugs_path(@project.id), class: "btn btn-info btn-xs" %>
      <%= link_to 'Report new bug', new_project_bug_path(@project.id), class: "btn btn-danger btn-xs"%>
    </div>
  </dd>

  <!-- <dt>  </dt>
  <dd>  </dd> -->

</dl>
<hr>
<div class="pull-right">
  <% if current_user.id == @project.user.id %>
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-link btn-xs" %> |
  <% end %>
  <%= link_to 'Back', projects_path, class: "btn btn-link btn-xs" %>
</div>
