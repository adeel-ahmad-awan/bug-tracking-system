<%= form_for ([@bug, @bug.steps.build]) do |f| %>


<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control", rows: "2", placeholder: "add step to reproduce the bug"%>
</div>

<div class="actions form-group pull-right">
  <%= f.submit class: "btn btn-default" %>
</div>

<% end %>
